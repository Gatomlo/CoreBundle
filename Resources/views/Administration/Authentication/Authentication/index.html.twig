{% extends "ClarolineCoreBundle:Administration:layout.html.twig" %}

{% block title %}{{ parent() ~ ' - ' ~ 'parameters' | trans({}, 'platform') | striptags | raw }}{% endblock %}

{% block breadcrumb %}
    {{
    macros.breadcrumbs([
    {
        'icon': 'fa fa-cog',
        'name': 'administration'|trans({}, 'platform'),
        'href': path('claro_admin_parameters_index')
    },
    {
        'name': 'parameters'|trans({}, 'platform'),
        'href': path('claro_admin_parameters_index')
    },
    {
        'name': 'authentication'|trans({}, 'platform'),
        'href': ''
    }
    ])
    }}
{% endblock %}

{% block section_content %}

    <div class="panel-heading">
        <h3 class="panel-title">{{ 'authentication'|trans({}, 'platform') }}</h3>
    </div>
    <div class="list-group">
        <a class="list-group-item" href="{{ path('claro_admin_authentication_sources') }}">
            {{ 'authentication_source'|trans({}, 'platform') }}
        </a>
        <a href="{{ path('claro_admin_oauth_index') }}" class="list-group-item">
            {{ 'Claroline'|trans({}, 'platform') }}
        </a>
        {{ knp_menu_render(
            'ClarolineCoreBundle:Builder:externalAuthenticationMenu',
            {},
            'external_authentication_renderer')
        }}
    </div>
{% endblock %}
