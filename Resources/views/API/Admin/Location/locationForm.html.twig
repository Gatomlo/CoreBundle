{% extends "ClarolineCoreBundle:API\\Admin\\Location:modal.html.twig" %}

{% block header %}
    {{ 'create_location'|trans({}, 'platform') }}
{% endblock %}
{% block form %}
    <form novalidate
            role="form"
            class="form-horizontal"
            ng-submit="submit()"
            method="post" {{ form_enctype(form) }}
            >
        <div class="modal-body">
            {{ form_widget(form) }}
        </div>
        <div class="modal-footer">
            <button id="create-location-btn" class="btn btn-primary">{{ 'create'|trans({}, 'platform') }}</button>
            <div class="btn btn-default" data-dismiss="modal" ng-click="closeModal()">{{ 'cancel'|trans({}, 'platform') }}</div>
        </div>
    </form>
{% endblock %}